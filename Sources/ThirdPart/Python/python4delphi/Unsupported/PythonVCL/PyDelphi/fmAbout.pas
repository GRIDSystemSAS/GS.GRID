interface

uses Windows, SysUtils, Classes, Graphics, Forms, Controls, StdCtrls,
  Buttons, ExtCtrls;

type
  TAboutBox = class(TForm)
    Panel1: TPanel;
    ProgramIcon: TImage;
    ProductName: TLabel;
    Version: TLabel;
    Copyright: TLabel;
    Comments: TLabel;
    OKButton: TButton;
    Label1: TLabel;
    LPythonVersion: TLabel;
    LPythonCopyright: TLabel;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  AboutBox: TAboutBox;

implementation
uses PythonEngine;

{$R *.DFM}

procedure TAboutBox.FormCreate(Sender: TObject);
begin
  with GetPythonEngine do
    begin
      LPythonVersion.Caption   := 'Python DLL '+Py_GetVersion;
      LPythonCopyright.Caption := Py_GetCopyright;
    end;
end;

end.

